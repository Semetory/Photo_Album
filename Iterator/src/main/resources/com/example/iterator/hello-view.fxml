<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.iterator.HelloController">

    <top>
        <HBox spacing="10" alignment="TOP_LEFT" style="-fx-padding: 10;">
            <VBox spacing="5">
                <Button text="Выбрать папку" onAction="#chooseDirectory" prefWidth="140" />
                <ComboBox fx:id="formatCombo" promptText="Выберите формат" prefWidth="140"/>
            </VBox>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="10">
            <ImageView fx:id="imageView" fitWidth="1240"
                       fitHeight="680" preserveRatio="true"/>
        </VBox>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 15;">
            <Label fx:id="statusLabel" text="Выберите папку и формат"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

            <HBox alignment="CENTER" spacing="20">
                <Button text="◀ Предыдущий" onAction="#prevImage"
                        prefWidth="120" prefHeight="40"
                        style="-fx-font-size: 14px;"/>

                <VBox alignment="CENTER" spacing="10">
                    <Button text="▶ Старт" onAction="#startSlideShow"
                            prefWidth="100" prefHeight="35"
                            style="-fx-font-size: 13px; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    <Button text="⏹ Стоп" onAction="#stopSlideShow"
                            prefWidth="100" prefHeight="35"
                            style="-fx-font-size: 13px; -fx-background-color: #f44336; -fx-text-fill: white;"/>
                </VBox>

                <Button text="Следующий ▶" onAction="#nextImage"
                        prefWidth="120" prefHeight="40"
                        style="-fx-font-size: 14px;"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
